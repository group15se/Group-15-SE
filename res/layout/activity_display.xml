<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".DisplayActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Treename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="65px"
            android:text="This is Tree name" />

        <ImageView
            android:id="@+id/Treepicture"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/Treename"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/tree1" />

        <LinearLayout
            android:id="@+id/Treeinformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Treepicture"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PlantPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plant Place: Auckland" />

            <TextView
                android:id="@+id/Growth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PlantPlace"
                android:text="Growth" />

            <TextView
                android:id="@+id/Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Growth"
                android:text="Price: $10 per kg" />

            <TextView
                android:id="@+id/treeheight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Price"
                android:text="Max height: 10m" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Treenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Treeinformation"
            android:orientation="horizontal">

            <Button
                android:id="@+id/increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Increase" />

            <TextView
                android:id="@+id/treenumber"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="65px"
                android:text="1" />

            <Button
                android:id="@+id/decrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="decrease" />

        </LinearLayout>

        <Button
            android:id="@+id/purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Treenumber"
            android:text="purchase" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>